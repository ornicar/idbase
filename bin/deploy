#!/bin/sh
. bin/idbaserc

REMOTE="cammy"
REMOTE_DIR="/home/idbase"

log "Deploy to $REMOTE:$REMOTE_DIR"

APP_NAME=idbase-1.0

sbt stage
if [ $? != 0 ]; then
  log "Deploy canceled"
  exit 1
fi

RSYNC_OPTIONS=" \
  --archive \
  --force \
  --delete \
  --progress \
  --compress \
  --checksum \
  --verbose \
  --exclude application.conf \
  --exclude logs \
  --exclude RUNNING_PID \
  --exclude target/resolution-cache \
  --exclude target/native_libraries \
  --exclude target/scala-* \
  --exclude target/.history \
  --exclude target/streams";

log "Rsync scripts, binaries and assets"
stage="target/universal/stage"
rsync_command="rsync $RSYNC_OPTIONS bin $stage/bin $stage/lib public $REMOTE:$REMOTE_DIR"
echo "$rsync_command"
$rsync_command

log "Restart idbase"
ssh $REMOTE "chown -R idbase $REMOTE_DIR && service idbase restart"

log "Deploy complete"

sleep 2

curl_prod
